<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:fadingEdge="none" android:background="@drawable/galleryselector"
	android:layout_height="wrap_content" android:layout_width="wrap_content">
	<TextView android:id="@+id/gamedate" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="top|left"
		android:layout_marginTop="12dip" android:layout_marginLeft="5dip"

		android:text="gamedate" android:textColor="#ffffff" android:textSize="12dip"></TextView>
		
		
		
		
	<TextView android:id="@+id/team1" android:layout_width="wrap_content"
		android:textColor="#ffffff" android:textStyle="bold"
		android:layout_height="wrap_content" android:layout_gravity="top|left"
		android:layout_marginTop="27dip" android:layout_marginLeft="5dip"
		android:text="player1"  android:textSize="12dip"></TextView>
		
	<TextView android:id="@+id/team2" android:layout_width="wrap_content"
		 
		 android:textColor="@color/white"
		 android:textStyle="bold"
		android:layout_height="wrap_content" android:layout_gravity="top|left"
		android:layout_marginTop="42dip" android:layout_marginLeft="5dip"

		android:text="player2"  android:textSize="12dip"></TextView>
		
	<TextView android:id="@+id/gamestatus" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="top|left"
		android:layout_marginTop="57dip" android:layout_marginLeft="5dip"
		

		android:text="gamestatus" android:textColor="#ffffff"
		android:textSize="12dip"></TextView>
		
		<TextView android:id="@+id/gametime" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="top|left"
		android:layout_marginTop="72dip" android:layout_marginLeft="5dip"

		android:text="gametime" android:textColor="#ffffff" android:textSize="12dip"></TextView>
</FrameLayout>
