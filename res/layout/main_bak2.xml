			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:background="@drawable/blue_subheader_bg">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:background="@drawable/footer_img"></ImageView>
			</LinearLayout>
