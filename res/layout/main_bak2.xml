				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:orientation="vertical">
					<LinearLayout android:id="@+id/LinearLayoutP1list"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:background="@drawable/blue_subheader_bg">
						<TextView android:id="@+id/TextViewP1"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:text="1st Period" android:textColor="#ffffff"
							android:textSize="12px" android:textStyle="bold"></TextView>


					</LinearLayout>
					<ListView android:id="@+id/ListViewP1"
						android:layout_width="wrap_content" android:layout_height="wrap_content"></ListView>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:orientation="vertical">
					<LinearLayout android:id="@+id/LinearLayoutp2list"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:background="@drawable/blue_subheader_bg">
						<TextView android:id="@+id/TextViewP2"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:textColor="#ffffff" android:textSize="12px"
